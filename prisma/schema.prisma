generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Role {
  id     String  @id @default(uuid())
  name   String  @unique
  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  @@map("roles")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?
  avatar    String?
  roles     Role[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
