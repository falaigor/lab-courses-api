generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatar    String?
  roles     String[] @default(["usr"])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
